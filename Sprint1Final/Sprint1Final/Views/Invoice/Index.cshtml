@model IEnumerable<Sprint1Final.Models.Invoice>

@{
    ViewBag.Title = "Index";
}

<h2>Invoice List</h2>



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model=>model.InvoiceID)
        </th>
      
        <th>
            @Html.DisplayNameFor(model => model.CustID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BasicCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VatAmt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FinalCost)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.InvoiceID)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.CustID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BasicCost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VatAmt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FinalCost)
        </td>
       
    </tr>
}

</table>
